@import './grid.styl'
@import './components/navbar.styl'
@import './components/btn.styl'
@import './components/section.styl'

ip_colour = blue
sp_colour = red

*
  margin 0
  padding 0

html
  font-size 16px
  line-height 1.5

body
  color #111
  font-family Lato, Arial, sans-serif

table, textarea
  width 100%

  font-family 'Source Code Pro', Inconsolata, monospace

th, td
  text-align center

td
  position relative

.ip-label
  color ip_colour

.sp-label
  color sp_colour

.ip-focus:before,
.sp-focus:before
  content ' '

  display block
  position absolute

  left 0
  top 0
  right 0
  bottom 0

  border 2px solid

.ip-focus:before
  border-color ip_colour

.sp-focus:before
  border-color sp_colour

.container
  margin 0 auto
  width 960px

.content
  padding-top 1em

textarea
  resize none

  box-sizing border-box

  height 30em
